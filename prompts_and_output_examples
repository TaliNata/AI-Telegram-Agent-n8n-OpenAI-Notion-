## Prompts

// 1. –ö–æ–Ω—Ç–µ–∫—Å—Ç
const ctx = $('Validate Command').first().json;

const command = String(ctx.command ?? '/digest').trim().toLowerCase();
const chatId = String(
  ctx.chatId ??
  $env.TELEGRAM_DEFAULT_CHAT_ID ??
  ''
).trim();

// 2. –î–∞–Ω–Ω—ã–µ –∏–∑ Notion
const records = items
  .map(i => i.json)
  .filter(r => r && r.property_type);

// 3. –ö–æ–Ω—Ñ–∏–≥—É—Ä–∞—Ü–∏—è –∫–æ–º–∞–Ω–¥
const COMMANDS = {
  '/news': {
    type: 'news',
    title: 'üìå –ù–æ–≤–æ—Å—Ç–∏ –∑–∞ –ø—Ä–æ—à–ª—É—é –Ω–µ–¥–µ–ª—é',
    role: '—ç–∫—Å–ø–µ—Ä—Ç –ø–æ –Ω–æ–≤–æ—Å—Ç—è–º –∏ –æ–±–∑–æ—Ä–∞–º',
    tone: '–¥–µ–ª–æ–≤–æ–π, –∂–∏–≤–æ–π',
    focus: '–≥–ª–∞–≤–Ω—ã–µ —Å–æ–±—ã—Ç–∏—è –∏ —Ç—Ä–µ–Ω–¥—ã'
  },
  '/ideas': {
    type: 'idea',
    title: 'üí° –ò–¥–µ–∏ –∑–∞ –ø—Ä–æ—à–ª—É—é –Ω–µ–¥–µ–ª—é',
    role: '—ç–∫—Å–ø–µ—Ä—Ç –ø–æ —Å–∏–Ω—Ç–µ–∑—É –∏–¥–µ–π',
    tone: '–≤–¥–æ—Ö–Ω–æ–≤–ª—è—é—â–∏–π, –∫–æ–Ω–∫—Ä–µ—Ç–Ω—ã–π',
    focus: '–ø—Ä–∞–∫—Ç–∏—á–µ—Å–∫–∞—è —Ü–µ–Ω–Ω–æ—Å—Ç—å'
  },
  '/report': {
    type: 'report',
    title: 'üìä –û—Ç—á–µ—Ç—ã –∑–∞ –ø—Ä–æ—à–ª—É—é –Ω–µ–¥–µ–ª—é',
    role: '—ç–∫—Å–ø–µ—Ä—Ç –ø–æ –∞–Ω–∞–ª–∏—Ç–∏–∫–µ',
    tone: '—Ñ–∞–∫—Ç–∏—á–µ—Å–∫–∏–π, –∞–Ω–∞–ª–∏—Ç–∏—á–µ—Å–∫–∏–π',
    focus: '—Ä–µ–∑—É–ª—å—Ç–∞—Ç—ã –∏ —Ç–µ–Ω–¥–µ–Ω—Ü–∏–∏'
  }
};

// 4. –•–µ–ª–ø–µ—Ä—ã
function buildSummary(list) {
  return list
    .map((p, i) => {
      const name = p.property_name || p.name || 'Untitled';
      const content = (p.property_content || '').substring(0, 250);
      const url = p.url || '';
      return `${i + 1}. ${name}\n${content ? content + '\n' : ''}${url}`;
    })
    .join('\n\n');
}

function emptyResponse(text) {
  return [{
    json: {
      chatId,
      command,
      recordCount: 0,
      prompt: text
    }
  }];
}

// 5. –û–±—Ä–∞–±–æ—Ç–∫–∞ –∫–æ–Ω–∫—Ä–µ—Ç–Ω—ã—Ö –∫–æ–º–∞–Ω–¥
if (COMMANDS[command]) {
  if (!records.length) {
    return emptyResponse(
      `–í –±–∞–∑–µ Notion –Ω–µ—Ç –∑–∞–ø–∏—Å–µ–π –∑–∞ –ø—Ä–æ—à–ª—É—é –Ω–µ–¥–µ–ª—é. –°–æ–æ–±—â–∏ –æ–± —ç—Ç–æ–º –∫—Ä–∞—Ç–∫–æ –∏ –¥—Ä—É–∂–µ–ª—é–±–Ω–æ.`
    );
  }

  const cfg = COMMANDS[command];
  const filtered = records.filter(
    r => (r.property_type || '').toLowerCase() === cfg.type
  );

  if (!filtered.length) {
    return emptyResponse(
      `–ó–∞–ø–∏—Å–µ–π —Ç–∏–ø–∞ ${cfg.type} –∑–∞ –ø—Ä–æ—à–ª—É—é –Ω–µ–¥–µ–ª—é –Ω–µ –Ω–∞–π–¥–µ–Ω–æ. –°–æ–æ–±—â–∏ –æ–± —ç—Ç–æ–º –∫—Ä–∞—Ç–∫–æ.`
    );
  }

  const summary = buildSummary(filtered);

  const prompt = `
–¢—ã ‚Äî ${cfg.role} –¥–ª—è Telegram.

–°–æ—Å—Ç–∞–≤—å –∫—Ä–∞—Ç–∫–∏–π –æ–±–∑–æ—Ä –∑–∞ –ø—Ä–æ—à–ª—É—é –Ω–µ–¥–µ–ª—é.

–î–∞–Ω–Ω—ã–µ (${filtered.length} –∑–∞–ø–∏—Å–µ–π):
${summary}

–°–¢–†–£–ö–¢–£–†–ê:
${cfg.title}

‚Äî –ö—Ä–∞—Ç–∫–æ: 1‚Äì2 –ø—Ä–µ–¥–ª–æ–∂–µ–Ω–∏—è (–æ–±—â–∞—è –∫–∞—Ä—Ç–∏–Ω–∞)
‚Äî –û—Å–Ω–æ–≤–Ω—ã–µ –ø—É–Ω–∫—Ç—ã:
  ‚Ä¢ –ù–∞–∑–≤–∞–Ω–∏–µ ‚Äî 1‚Äì2 –ø—Ä–µ–¥–ª–æ–∂–µ–Ω–∏—è —Å—É—Ç–∏
    —Å—Å—ã–ª–∫–∞
‚Äî –ò—Ç–æ–≥: 1 –∫–æ—Ä–æ—Ç–∫–æ–µ –ø—Ä–µ–¥–ª–æ–∂–µ–Ω–∏–µ

–¢–†–ï–ë–û–í–ê–ù–ò–Ø:
- –ú–∞–∫—Å–∏–º—É–º 280 —Å–ª–æ–≤
- –ü—Ä–æ—Å—Ç–æ–π Markdown
- –ß–∏—Ç–∞–µ—Ç—Å—è –∑–∞ 30‚Äì40 —Å–µ–∫—É–Ω–¥
- –¢–æ–Ω: ${cfg.tone}
- –§–æ–∫—É—Å: ${cfg.focus}
- –ù–∏–∫–∞–∫–∏—Ö –≤—ã–¥—É–º–∞–Ω–Ω—ã—Ö —Ñ–∞–∫—Ç–æ–≤
- –°—Å—ã–ª–∫–∏ –≤ –∫–æ–Ω—Ü–µ –ø—É–Ω–∫—Ç–æ–≤
`;

  return [{
    json: {
      chatId,
      command,
      recordCount: filtered.length,
      prompt
    }
  }];
}

// 6. Fallback ‚Äî —É–Ω–∏–≤–µ—Ä—Å–∞–ª—å–Ω—ã–π –¥–∞–π–¥–∂–µ—Å—Ç
if (!records.length) {
  return emptyResponse(
    `–í –±–∞–∑–µ Notion –Ω–µ—Ç –∑–∞–ø–∏—Å–µ–π –∑–∞ –ø—Ä–æ—à–ª—É—é –Ω–µ–¥–µ–ª—é. –°–æ–æ–±—â–∏ –æ–± —ç—Ç–æ–º –∫—Ä–∞—Ç–∫–æ –∏ –¥—Ä—É–∂–µ–ª—é–±–Ω–æ.`
  );
}

const content = records
  .map((r, i) => {
    const type = r.property_type;
    const title = r.property_name || r.name || 'Untitled';
    const text = (r.property_content || '').trim();
    const short = text.length > 180 ? text.slice(0, 177) + '...' : text;
    const url = r.url || '';
    return `${i + 1}. ${type} ‚Äî ${title}\n${short ? short + '\n' : ''}${url}`;
  })
  .join('\n\n');

const prompt = `
–¢—ã ‚Äî AI-–∞—Å—Å–∏—Å—Ç–µ–Ω—Ç –¥–ª—è Telegram.

–°–¥–µ–ª–∞–π –∫—Ä–∞—Ç–∫–∏–π –¥–∞–π–¥–∂–µ—Å—Ç –∑–∞ –ø—Ä–æ—à–ª—É—é –Ω–µ–¥–µ–ª—é.

–î–∞–Ω–Ω—ã–µ (${records.length} –∑–∞–ø–∏—Å–µ–π):
${content}

–¢–†–ï–ë–û–í–ê–ù–ò–Ø:
- –î–æ 300 —Å–ª–æ–≤
- –ü—Ä–æ—Å—Ç–æ–π Markdown
- –ë–µ–∑ –≤—ã–¥—É–º–∞–Ω–Ω—ã—Ö —Ñ–∞–∫—Ç–æ–≤
- –ï—Å–ª–∏ –∫–∞—Ç–µ–≥–æ—Ä–∏–π –Ω–µ—Ç ‚Äî –Ω–µ —É–ø–æ–º–∏–Ω–∞–π –∏—Ö

–°–¢–†–£–ö–¢–£–†–ê:
üìå –î–∞–π–¥–∂–µ—Å—Ç –∑–∞ –ø—Ä–æ—à–ª—É—é –Ω–µ–¥–µ–ª—é
‚Äî –ö—Ä–∞—Ç–∫–æ
‚Äî –û—Å–Ω–æ–≤–Ω—ã–µ –ø—É–Ω–∫—Ç—ã –ø–æ —Ç–∏–ø–∞–º
‚Äî –ò—Ç–æ–≥
`;

return [{
  json: {
    chatId,
    command: '/digest',
    recordCount: records.length,
    prompt
  }
}];

---

